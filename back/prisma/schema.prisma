// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id        String    @id @unique @default(uuid())
  firstName String
  lastName  String
  createdAt DateTime  @default(now())
  email     String    @unique
  password  String?
  isAdmin   Boolean   @default(false)
  invoices  Invoice[]
  cart      Cart[]
  address   String?
  phone     String?
  token     String?
}

model Invoice {
  id              String          @id @unique @default(uuid())
  createdAt       DateTime        @default(now())
  paidAt          DateTime?
  isPaid          Boolean         @default(false)
  finalPrice      Float
  clientId        String
  client          Client          @relation(fields: [clientId], references: [id])
  invoicesGames   invoicesGames[]
  billingAddress  String?
  shippingAddress String?
}

model Cart {
  id        String     @id @unique @default(uuid())
  createdAt DateTime   @default(now())
  clientId  String?
  client    Client?    @relation(fields: [clientId], references: [id])
  cookies   String[]
  cartGame  cartGame[]
}

model cartGame {
  id     Int    @id @default(autoincrement())
  cartId String
  gameId String
  cart   Cart   @relation(fields: [cartId], references: [id])
  game   Game   @relation(fields: [gameId], references: [id])
}

model Game {
  id            String          @id @unique @default(uuid())
  stock         Int
  img           String?
  price         Float
  description   String?
  name          String          @unique
  minPlayer     Int?
  maxPlayer     Int?
  duration      String?
  type          GameType        @default(BoardGame)
  invoicesGames invoicesGames[]
  cartGame      cartGame[]
}

model invoicesGames {
  id        Int     @id @default(autoincrement())
  invoiceId String
  gameId    String
  quantity  Int
  invoice   Invoice @relation(fields: [invoiceId], references: [id])
  game      Game    @relation(fields: [gameId], references: [id])
}

enum GameType {
  BoardGame
  CardGame
  MiniatureGame
  RolePlayingGame
  CoopGame
  StrategyGame
  QuizGame
  PartyGame
}
